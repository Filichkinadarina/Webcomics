<p id="notice"><%= notice %></p>

<h1>Bubbles</h1>

<table>
  <thead>
    <tr>
      <th>Figure</th>
      <th>X</th>
      <th>Y</th>
      <th>Width</th>
      <th>Height</th>
      <th>Border-width</th>
      <th>Border-color</th>
      <th>Background-color</th>
      <th>Shape</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @bubbles.each do |bubble| %>
      <tr>
        <td><%= bubble.figure %></td>
        <td><%= bubble.x %></td>
        <td><%= bubble.y %></td>
        <td><%= bubble.width %></td>
        <td><%= bubble.height %></td>
        <td><%= bubble.border-width %></td>
        <td><%= bubble.border-color %></td>
        <td><%= bubble.background-color %></td>
        <td><%= bubble.shape %></td>
        <td><%= link_to 'Show', bubble %></td>
        <td><%= link_to 'Edit', edit_bubble_path(bubble) %></td>
        <td><%= link_to 'Destroy', bubble, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Bubble', new_bubble_path %>
